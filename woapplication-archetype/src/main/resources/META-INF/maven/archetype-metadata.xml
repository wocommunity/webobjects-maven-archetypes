<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="woapplication-archetype">
	<requiredProperties>
		<requiredProperty key="JavaVersion">
			<defaultValue>1.8</defaultValue>
		</requiredProperty>
	</requiredProperties>
	<fileSets>
		<fileSet filtered="true" packaged="true" encoding="UTF-8">
			<directory>src/main/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/main/components</directory>
			<includes>
				<include>**/*.html</include>
				<include>**/*.wod</include>
				<include>**/*.woo</include>
				<include>**/*.api</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/main/resources</directory>
			<includes>
				<include>**/Properties</include>
				<include>**/*.plist</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory>woproject</directory>
			<includes>
				<include>**/*.patternset</include>
				<include>**/*.wosystemroot</include>
				<include>**/*.wolocalroot</include>
				<include>**/*.home</include>
			</includes>
		</fileSet>
		<fileSet encoding="UTF-8">
			<directory>src/main/webserver-resources</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" encoding="UTF-8">
			<directory></directory>
			<includes>
				<include>.classpath</include>
				<include>.project</include>
				<include>build.properties</include>
			</includes>
		</fileSet>
	</fileSets>
</archetype-descriptor>